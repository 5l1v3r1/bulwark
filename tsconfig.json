{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "removeComments": true,
    "baseUrl": "./",
    "sourceMap": true
  },
  "exclude": ["./frontend", "./migration", "src/**/*.spec.ts"],
  "include": ["src/**/*"]
}
